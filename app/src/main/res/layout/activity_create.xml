<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background"
tools:context=".CreateActivity">

<EditText
    android:id="@+id/lastName_create"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:hint=" Enter Last Name"
    android:inputType="textPersonName"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintEnd_toEndOf="@+id/firstName_create"
    app:layout_constraintStart_toStartOf="@+id/firstName_create"
    app:layout_constraintTop_toBottomOf="@+id/firstName_create" />

<EditText
    android:id="@+id/department_create"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="8dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:hint=" Select Department"
    android:inputType="textPersonName"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView"
    app:layout_constraintTop_toBottomOf="@+id/lastName_create" />

<EditText
    android:id="@+id/position_create"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="48dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="8dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:hint=" Enter Your Position"
    android:inputType="textPersonName"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/textView"
    app:layout_constraintTop_toBottomOf="@+id/department_create" />

<EditText
    android:id="@+id/firstName_create"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:hint=" Enter First Name"
    android:inputType="textPersonName"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintEnd_toEndOf="@+id/password_create"
    app:layout_constraintStart_toStartOf="@+id/password_create"
    app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <ImageView
        android:id="@+id/photo_create"
        android:layout_width="144dp"
        android:layout_height="244dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:onClick="getPhoto"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_photo" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="189dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:buttonTint="@color/colorPrimaryDark"
        android:text="Administrator User"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/photo_create"
        app:layout_constraintTop_toBottomOf="@+id/password_create" />

<EditText
    android:id="@+id/username_create"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="8dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:hint=" Select Username"
    android:inputType="textPersonName"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/photo_create"
    app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#E6E0E0"
        android:ems="10"
        android:hint=" Select Password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/username_create"
        app:layout_constraintStart_toStartOf="@+id/username_create"
        app:layout_constraintTop_toBottomOf="@+id/username_create" />

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Department:"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/department_create" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Position:"
    app:layout_constraintStart_toStartOf="@+id/textView"
    app:layout_constraintTop_toTopOf="@+id/position_create" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Your Story: ("
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

<EditText
    android:id="@+id/story_create"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    android:background="#E6E0E0"
    android:ems="10"
    android:gravity="start|top"
    android:hint="Tell us something about yourself!"
    android:inputType="textMultiLine"
    android:textColorHint="@color/colorPrimaryDark"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:onClick="getPhoto"
        app:layout_constraintBottom_toBottomOf="@+id/photo_create"
        app:layout_constraintEnd_toEndOf="@+id/photo_create"
        app:layout_constraintStart_toStartOf="@+id/photo_create"
        app:layout_constraintTop_toTopOf="@+id/photo_create"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/wordCount_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="of 360 )"
        app:layout_constraintBottom_toBottomOf="@+id/wordCount_create"
        app:layout_constraintStart_toEndOf="@+id/wordCount_create"
        app:layout_constraintTop_toTopOf="@+id/wordCount_create"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBar_create"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:elevation="7dp"
        android:indeterminate="true"
        android:indeterminateTint="#4CAF50"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>